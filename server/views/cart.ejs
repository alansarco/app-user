<%- include('partials/header');  %>

<main class="flex flex-col mt-3 shadow-2xl rounded-lg relative">
    <section class="flex-grow-0 text-center bg-purple-blue rounded-t-lg p-2">
        <button class="request_btn bg-indigo-100 px-3 py-1 rounded-full cursor-pointer transition-shadow duration-200 hover:shadow-md absolute top-2 right-2">+</button>
        <span class="font-normal text-white text-lg">Cart</span>
    </section>

    <section class="flex-grow h-0 flex flex-col items-center overflow-scroll bg-blue-fade rounded-b-lg p-4 text-left">
        <div class="text-left text-sm font-bold text-white text">Active Requests</div>
        <div class="bg-white w-full rounded-lg p-4 mt-3 shadow-md flex justify-between">
            <div class="flex flex-col">
                <span class="font-bold text-sm text-semiblack">Certificate of Residency</span>
                <span class="font-thin text-xxs text-gray-400">
                    <span >December 20, 2023 at 7:58 PM</span>
                </span>
            </div>
            <div class="flex flex-col">
                <span class="text-xs text-yellow-400">Pending</span>
            </div>
        </div>

        <div class="text-left text-sm font-bold text-white text mt-4">Previous Requests</div>
        <div class="bg-white w-full rounded-lg p-4 mt-3 shadow-md flex justify-between">
            <div class="flex flex-col">
                <span class="font-bold text-sm text-semiblack">Certificate of Indigency</span>
                <span class="font-thin text-xxs text-gray-400">
                    <span>December 20, 2023 at 7:58 PM</span>
                </span>
            </div>
            <div class="flex flex-col">
                <span class="text-xs text-blue-400">Finished</span>
            </div>
        </div>
        <!-- request section -->
        <div class="absolute top-0 left-0 h-full w-full border accent-slate-200  rounded-lg justify-center items-center request_container bg-trans">
            <div class="w-5/6 h-5/6 bg-white rounded-lg shadow-2xl flex flex-col p-4" id="requests">
                    <div class="flex-grow-0 flex items-center justify-end">
                            <i class="bi bi-x-square-fill text-xl text-red-500 cursor-pointer close_btn"></i>
                    </div>
                    <header class="flex-grow-0 flex items-center justify-center text-md">
                            <span class="font-bold">None</span>
                    </header>
                    <main class="flex-grow h-0 flex flex-col items-center overflow-scroll request-section">
                            
                    </main>
                    <footer class="flex-grow-0">
                            <form class="flex flex-row justify-center items-center request_form">
                                    <input type="text" class="shadow-md text-sm rounded-lg w-3/4 outline-none p-2 request_content" placeholder="Enter request" name="request">
                                    <button class="bg-green-400 p-2 rounded-lg ml-4 shadow-md text-white text-sm">Send</button>
                            </form>
                    </footer>
            </div>
        </div>
    </section>
</main>

